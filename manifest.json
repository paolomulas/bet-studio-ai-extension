{
  "manifest_version": 3,
  "name": "Bet‑Studio — AI Match Insights",
  "version": "2.0.0",
  "description": "Real-time AI-powered football match analysis. Get instant insights on profitable opportunities using Chrome's built-in AI.",
  "icons": {
    "16": "icons/logo-16.png",
    "32": "icons/logo-32.png",
    "48": "icons/logo-48.png",
    "128": "icons/logo-128.png"
  },
  "action": {
    "default_title": "Bet‑Studio — AI Match Insights",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo-16.png",
      "32": "icons/logo-32.png"
    }
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://bet-studio.com/*",
    "https://www.bet-studio.com/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
